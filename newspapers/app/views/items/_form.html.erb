  </p>
 
  <p>
    <%= form.label :date %><br>
    <%= form.text_field :date %>
  </p>
 
  <p>
    <%= form.label :page %><br>
    <%= form.text_field :page %>
  </p>
 
  <p>
    <%= form.label :url %><br>
    <%= form.text_field :url %>
  </p>
  
  <p>
   <%= form.label :thumbnail %><br>
   <%= form.file_field :thumbnail %>
  </p>

  <p>
    <%= form.submit %>
  </p>
 
<% end %>
